class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n = nums.size();

        vector<int> result(n);

        int i=0;
        int j=n-1; 
        int k =n-1; 
        while( k>=0 ){
            int L = nums[i]*nums[i];
            int R = nums[j]*nums[j];

            if(L>R){
                result[k] = L;
                i++;
            }
            else{
                result[k] = R;
                j--;
            }
            k--;
        }
        return result;
    }
};
