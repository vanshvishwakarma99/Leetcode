class Solution {
public:
    int partitionDisjoint(vector<int>& nums) {
        int n = nums.size();
        int leftMax = nums[0];
        int overallMax = nums[0];
        int partitionIdx = 0;
        
        for (int i = 1; i < n; i++){
            overallMax = max(overallMax, nums[i]);
            if (nums[i] < leftMax){
                leftMax = overallMax;
                partitionIdx = i;
            }
        }
        return partitionIdx + 1;
    }
};
